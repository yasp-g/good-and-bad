<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or "Good and Bad" }}</title>
    <link rel="icon" href="/logo_favicon-32x32.ico" sizes="any">
    <link rel="icon" type="image/png" href="/logo_favicon-32x32.png" sizes="32x32">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="stylesheet" href="/css/global.css">
    <script>
        // Global Viewing System
        // Parse parameters before page renders to prevent flash
        (function() {
            const params = new URLSearchParams(window.location.search);
            const displayMode = params.get('display');
            const bgMode = params.get('bg');
            
            if (displayMode) document.documentElement.classList.add(`display-${displayMode}`);
            if (bgMode) document.documentElement.classList.add(`bg-${bgMode}`);
            
            // Re-apply to body when DOM is ready (for CSS specificity if needed)
            document.addEventListener('DOMContentLoaded', () => {
                if (displayMode) document.body.classList.add(`display-${displayMode}`);
                if (bgMode) document.body.classList.add(`bg-${bgMode}`);
            });
        })();
    </script>
    {% block head %}{% endblock %}
</head>
<body>
    {% block content %}
        {{ content | safe }}
    {% endblock %}

    <noscript>
        <div class="noscript-message" style="position: fixed; bottom: 20px; left: 20px; background: rgba(0,0,0,0.7); color: white; padding: 15px; z-index: 1000;">
            JavaScript is disabled. Some interactive features will not work.
        </div>
    </noscript>

    {% block scripts %}{% endblock %}
</body>
</html>
