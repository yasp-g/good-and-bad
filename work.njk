---
layout: layouts/base.njk
title: Work â€” Good and Bad
---

{% block head %}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Cormorant:wght@400&family=Inter:wght@400&family=IBM+Plex+Mono:wght@400&display=swap" rel="stylesheet">
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: #000;
        color: #fff;
        font-family: 'Inter', sans-serif;
        line-height: 1.5;
    }

    /* Section styling */
    .section {
        min-height: 100vh;
        padding: 8vh 8vw;
        border-bottom: 1px solid #222;
    }

    .section-title {
        font-size: clamp(0.75rem, 1.5vw, 1rem);
        font-weight: 400;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: #666;
        margin-bottom: 6vh;
    }

    .variation {
        margin-bottom: 12vh;
    }

    .variation:last-child {
        margin-bottom: 0;
    }

    .variation-label {
        font-size: clamp(0.6rem, 1vw, 0.75rem);
        font-weight: 400;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: #444;
        margin-bottom: 3vh;
    }

    /* Work list base styles */
    .work-list {
        list-style: none;
    }

    .work-item {
        transition: opacity 0.3s ease;
    }

    .work-list:has(a:hover) .work-item {
        opacity: 0.3;
    }

    .work-list:has(a:hover) .work-item:hover {
        opacity: 1;
    }

    .project-name a {
        text-decoration: none;
        transition: opacity 0.3s ease;
    }

    .separator {
        color: #444;
    }

    .meta {
        color: #444;
    }

    /* VARIABLE: Font Family */
    .font-inter { font-family: 'Inter', sans-serif; }
    .font-helvetica { font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; }
    .font-cormorant { font-family: 'Cormorant', serif; }
    .font-mono { font-family: 'IBM Plex Mono', monospace; }

    /* VARIABLE: Vertical Spacing */
    .spacing-tight .work-item { margin-bottom: 1.5vh; }
    .spacing-medium .work-item { margin-bottom: 2.5vh; }
    .spacing-loose .work-item { margin-bottom: 4vh; }

    /* VARIABLE: Separator Type */
    .sep-comma .separator::after { content: ','; }
    .sep-comma .separator { margin-right: 0.5em; }

    .sep-tab .work-item {
        display: grid;
        grid-template-columns: 1fr auto;
        gap: 4vw;
        align-items: baseline;
    }
    .sep-tab .separator { display: none; }
    .sep-tab .meta { text-align: right; }

    /* VARIABLE: Link Color */
    .link-classic .project-name a { color: #0000EE; }
    .link-blue .project-name a { color: #4A90D9; }
    .link-light-blue .project-name a { color: #7AB8F5; }
    .link-modern-blue .project-name a { color: #0066CC; }
    .link-white .project-name a { color: #fff; }

    /* VARIABLE: Underline */
    .underline-on .project-name a { text-decoration: underline; }
    .underline-off .project-name a { text-decoration: none; }

    /* VARIABLE: Text Scale */
    .scale-sm .work-item { font-size: clamp(1rem, 2vw, 1.5rem); }
    .scale-md .work-item { font-size: clamp(1.25rem, 3vw, 2rem); }
    .scale-lg .work-item { font-size: clamp(1.5rem, 4vw, 3rem); }
    .scale-xl .work-item { font-size: clamp(2rem, 5vw, 4rem); }

    /* Default scale for non-scale sections */
    .work-item {
        font-size: clamp(1.25rem, 3vw, 2rem);
    }
</style>
{% endblock %}

<div id="content"></div>

{% block scripts %}
<script>
    const workItems = [
        { title: "Archive Grid", year: "2025", collaborator: "", type: "Digital", hasLink: true, link: "/archive/" },
        { title: "REPLICA MAN", year: "2025", collaborator: "", type: "Print", hasLink: true, link: "#" },
        { title: "Vogue Italia", year: "2024", collaborator: "Annie Leibovitz", type: "Editorial", hasLink: true, link: "#" },
        { title: "Paris Fashion Week SS25", year: "2024", collaborator: "Ivan Cheng", type: "Runway", hasLink: false },
        { title: "Studio XYZ", year: "2023", collaborator: "", type: "Collection", hasLink: true, link: "#" },
        { title: "W Magazine", year: "2023", collaborator: "", type: "Editorial", hasLink: true, link: "#" }
    ];

    function formatMeta(item, level) {
        const parts = [item.year];
        if (level === 'year-collab' && item.collaborator) {
            parts.push(item.collaborator);
        }
        if (level === 'full') {
            if (item.collaborator) parts.push(item.collaborator);
            if (item.type) parts.push(item.type);
        }
        return parts.join(', ');
    }

    function generateList(classes, metaLevel = 'year-collab') {
        return `<ul class="work-list ${classes}">
            ${workItems.map(item => `
                <li class="work-item">
                    <span class="project-name">${item.hasLink ? `<a href="${item.link}">${item.title}</a>` : item.title}</span><span class="separator"></span><span class="meta">${formatMeta(item, metaLevel)}</span>
                </li>`).join('')}
        </ul>`;
    }

    const content = `
        <!-- 1. FONT FAMILY -->
        <section class="section">
            <h2 class="section-title">Font Family</h2>
            <div class="variation">
                <div class="variation-label">Inter</div>
                ${generateList('font-inter spacing-medium sep-comma link-classic underline-on')}
            </div>
            <div class="variation">
                <div class="variation-label">Helvetica</div>
                ${generateList('font-helvetica spacing-medium sep-comma link-classic underline-on')}
            </div>
            <div class="variation">
                <div class="variation-label">Cormorant</div>
                ${generateList('font-cormorant spacing-medium sep-comma link-classic underline-on')}
            </div>
            <div class="variation">
                <div class="variation-label">IBM Plex Mono</div>
                ${generateList('font-mono spacing-medium sep-comma link-classic underline-on')}
            </div>
        </section>

        <!-- 2. LINK COLOR -->
        <section class="section">
            <h2 class="section-title">Link Color</h2>
            <div class="variation">
                <div class="variation-label">Classic Web Blue</div>
                ${generateList('font-inter spacing-medium sep-comma link-classic underline-on')}
            </div>
            <div class="variation">
                <div class="variation-label">Blue</div>
                ${generateList('font-inter spacing-medium sep-comma link-blue underline-on')}
            </div>
            <div class="variation">
                <div class="variation-label">Light Blue</div>
                ${generateList('font-inter spacing-medium sep-comma link-light-blue underline-on')}
            </div>
            <div class="variation">
                <div class="variation-label">Modern Blue</div>
                ${generateList('font-inter spacing-medium sep-comma link-modern-blue underline-on')}
            </div>
            <div class="variation">
                <div class="variation-label">White</div>
                ${generateList('font-inter spacing-medium sep-comma link-white underline-on')}
            </div>
        </section>

        <!-- 3. UNDERLINE -->
        <section class="section">
            <h2 class="section-title">Underline</h2>
            <div class="variation">
                <div class="variation-label">Underlined</div>
                ${generateList('font-inter spacing-medium sep-comma link-classic underline-on')}
            </div>
            <div class="variation">
                <div class="variation-label">No Underline</div>
                ${generateList('font-inter spacing-medium sep-comma link-classic underline-off')}
            </div>
        </section>

        <!-- 4. TEXT SCALE -->
        <section class="section">
            <h2 class="section-title">Text Scale</h2>
            <div class="variation">
                <div class="variation-label">Small</div>
                ${generateList('font-inter spacing-medium sep-comma link-classic underline-on scale-sm')}
            </div>
            <div class="variation">
                <div class="variation-label">Medium</div>
                ${generateList('font-inter spacing-medium sep-comma link-classic underline-on scale-md')}
            </div>
            <div class="variation">
                <div class="variation-label">Large</div>
                ${generateList('font-inter spacing-medium sep-comma link-classic underline-on scale-lg')}
            </div>
            <div class="variation">
                <div class="variation-label">Extra Large</div>
                ${generateList('font-inter spacing-medium sep-comma link-classic underline-on scale-xl')}
            </div>
        </section>

        <!-- 5. SEPARATOR TYPE -->
        <section class="section">
            <h2 class="section-title">Separator Type</h2>
            <div class="variation">
                <div class="variation-label">Comma</div>
                ${generateList('font-inter spacing-medium sep-comma link-classic underline-on')}
            </div>
            <div class="variation">
                <div class="variation-label">Tab-Aligned</div>
                ${generateList('font-inter spacing-medium sep-tab link-classic underline-on')}
            </div>
        </section>

        <!-- 6. VERTICAL SPACING -->
        <section class="section">
            <h2 class="section-title">Vertical Spacing</h2>
            <div class="variation">
                <div class="variation-label">Tight</div>
                ${generateList('font-inter spacing-tight sep-comma link-classic underline-on')}
            </div>
            <div class="variation">
                <div class="variation-label">Medium</div>
                ${generateList('font-inter spacing-medium sep-comma link-classic underline-on')}
            </div>
            <div class="variation">
                <div class="variation-label">Loose</div>
                ${generateList('font-inter spacing-loose sep-comma link-classic underline-on')}
            </div>
        </section>

        <!-- 7. METADATA AMOUNT -->
        <section class="section">
            <h2 class="section-title">Metadata Amount</h2>
            <div class="variation">
                <div class="variation-label">Year Only</div>
                ${generateList('font-inter spacing-medium sep-comma link-classic underline-on', 'year-only')}
            </div>
            <div class="variation">
                <div class="variation-label">Year + Collaborator</div>
                ${generateList('font-inter spacing-medium sep-comma link-classic underline-on', 'year-collab')}
            </div>
            <div class="variation">
                <div class="variation-label">Full</div>
                ${generateList('font-inter spacing-medium sep-comma link-classic underline-on', 'full')}
            </div>
        </section>
    `;

    document.getElementById('content').innerHTML = content;
</script>
{% endblock %}
