---
layout: layouts/base.njk
title: Good and Bad
---

{% block head %}
<style>
    body {
        background-color: #000;
        color: #fff;
        margin: 0;
        padding: 0;
        height: 100vh;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: sans-serif;
    }

    #sound-toggle {
        position: fixed;
        bottom: 30px;
        right: 30px;
        z-index: 20;
        background: transparent;
        border: none;
        color: white;
        cursor: pointer;
        padding: 10px;
        opacity: 0.7;
        transition: opacity 0.3s ease;
    }

    #sound-toggle:hover {
        opacity: 1;
    }

    .icon {
        width: 24px;
        height: 24px;
        display: block;
        fill: currentColor;
    }

    .hidden {
        display: none;
    }
</style>
{% endblock %}

<video 
  src="/assets/landing_video.mp4" 
  autoplay 
  muted 
  loop 
  playsinline 
  id="landing-video">
</video>

<button id="sound-toggle" aria-label="Toggle Sound">
    <!-- Muted Icon -->
    <svg class="icon" id="icon-muted" viewBox="0 0 24 24">
        <path d="M16.5 12c0-1.77-1.02-3.29-2.5-4.03v2.21l2.45 2.45c.03-.2.05-.41.05-.63zm2.5 0c0 .94-.2 1.82-.54 2.64l1.51 1.51C20.63 14.91 21 13.5 21 12c0-4.28-2.99-7.86-7-8.77v2.06c2.89.86 5 3.54 5 6.71zM4.27 3L3 4.27 7.73 9H3v6h4l5 5v-6.73l4.25 4.25c-.67.52-1.42.93-2.25 1.18v2.06c1.38-.31 2.63-.95 3.69-1.81L19.73 21 21 19.73 4.27 3zM12 4L9.91 6.09 12 8.18V4z"/>
    </svg>
    <!-- Unmuted Icon -->
    <svg class="icon hidden" id="icon-unmuted" viewBox="0 0 24 24">
        <path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"/>
    </svg>
</button>

{% block scripts %}
<script>
    const video = document.getElementById('landing-video');
    const toggleBtn = document.getElementById('sound-toggle');
    const iconMuted = document.getElementById('icon-muted');
    const iconUnmuted = document.getElementById('icon-unmuted');

    function navigateToWork() {
        window.location.href = '/work/';
    }

    // Sound Toggle Logic
    toggleBtn.addEventListener('click', (e) => {
        e.stopPropagation(); // Prevent navigation
        
        if (video.muted) {
            video.muted = false;
            iconMuted.classList.add('hidden');
            iconUnmuted.classList.remove('hidden');
        } else {
            video.muted = true;
            iconMuted.classList.remove('hidden');
            iconUnmuted.classList.add('hidden');
        }
    });

    // Navigation logic (anywhere else)
    document.body.addEventListener('click', navigateToWork);
    document.body.addEventListener('touchstart', navigateToWork);
</script>
{% endblock %}
