---
layout: layouts/base.njk
title: Good and Bad
---

{% block head %}
<style>
    body {
        background-color: #000;
        color: #fff;
        margin: 0;
        padding: 0;
        height: 100vh;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: sans-serif;
    }

    #landing-video {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1;
        cursor: pointer;
    }

    #unmute-btn {
        position: fixed;
        bottom: 40px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 10;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        padding: 12px 24px;
        border-radius: 30px;
        cursor: pointer;
        font-size: 0.9rem;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        transition: all 0.3s ease;
    }

    #unmute-btn:hover {
        background: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 0.5);
    }

    #unmute-btn.hidden {
        opacity: 0;
        pointer-events: none;
    }
</style>
{% endblock %}

<video 
  src="/assets/landing_video.mp4" 
  autoplay 
  muted 
  loop 
  playsinline 
  id="landing-video">
</video>

<button id="unmute-btn">Tap to Unmute</button>

{% block scripts %}
<script>
    const video = document.getElementById('landing-video');
    const unmuteBtn = document.getElementById('unmute-btn');

    function navigateToWork() {
        window.location.href = '/work/';
    }

    // Unmute logic
    unmuteBtn.addEventListener('click', (e) => {
        e.stopPropagation(); // Prevent the body click from triggering navigation
        video.muted = false;
        unmuteBtn.classList.add('hidden');
    });

    // Navigation logic (anywhere else)
    document.body.addEventListener('click', navigateToWork);
    document.body.addEventListener('touchstart', navigateToWork);
</script>
{% endblock %}
